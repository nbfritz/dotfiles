alias sad='find . -iname Pipfile.lock -depth 2 -execdir pipenv install --dev \; && scripts/deploy_all.py'
alias ipy=ipython
alias yarnhelp="jq '.scripts | to_entries[] | \"\\(.key)|\\(.value)\"' package.json -r | column -t -s\\| | fzf | cut -f1 -w | xargs yarn"

function pipenv() {
  if [ -e "./Pipfile" ]; then
    $(whence -p pipenv) "$@"
  else
    echo "No Pipfile found. NOT CREATING ONE."
  fi
}
